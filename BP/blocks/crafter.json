{
	"format_version": "1.20.60",
	"minecraft:block": {
		"description": {
			"identifier": "refinedstorage:crafter",
			"menu_category": {
				"category": "items"
			},
			"states": {
				"refinedstorage:enabled": [false, true],
				"refinedstorage:placed": [false, true]
			},
			"traits": {
				"minecraft:placement_direction": {
					"enabled_states": ["minecraft:facing_direction"]
				}
			}
		},
		"components": {
			"tag:refinedstorage:connectable": {},
			"tag:refinedstorage:without_direction": {},
			"minecraft:custom_components": ["refinedstorage:connectable"],
			"minecraft:destructible_by_explosion": false,
			"minecraft:geometry": "minecraft:geometry.full_block",
			"minecraft:destructible_by_mining": {
				"seconds_to_destroy": 0.75
			},
			"minecraft:material_instances": {
				"*": {
					"texture": "crafter_side_on"
				},
				"up": {
					"texture": "crafter_up_on"
				},
				"down": {
					"texture": "general_down"
				}
			}
		},
		"permutations": [
			{
				"condition": "q.block_state('refinedstorage:placed') && !q.block_state('refinedstorage:enabled')",
				"components": {
					"minecraft:material_instances": {
						"*": {
							"texture": "crafter_side_off"
						},
						"up": {
							"texture": "crafter_up_off"
						},
						"down": {
							"texture": "general_down"
						}
					}
				}
			},
			{
				"condition": "q.block_state('minecraft:facing_direction') == 'north'",
				"components": {
					"minecraft:transformation": {
						"rotation": [90, 0, 0]
					}
				}
			},
			{
				"condition": "q.block_state('minecraft:facing_direction') == 'south'",
				"components": {
					"minecraft:transformation": {
						"rotation": [-90, 0, 0]
					}
				}
			},
			{
				"condition": "q.block_state('minecraft:facing_direction') == 'west'",
				"components": {
					"minecraft:transformation": {
						"rotation": [90, 90, 0]
					}
				}
			},
			{
				"condition": "q.block_state('minecraft:facing_direction') == 'east'",
				"components": {
					"minecraft:transformation": {
						"rotation": [90, -90, 0]
					}
				}
			},
			{
				"condition": "q.block_state('minecraft:facing_direction') == 'up'",
				"components": {
					"minecraft:transformation": {
						"rotation": [180, 0, 0]
					}
				}
			},
			{
				"condition": "q.block_state('minecraft:facing_direction') == 'down'",
				"components": {
					"minecraft:transformation": {
						"rotation": [0, 0, 0]
					}
				}
			}
		]
	}
}
